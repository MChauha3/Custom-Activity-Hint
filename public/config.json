{
  "workflowApiVersion": "1.1",
  "metaData": {
    "icon": "images/icon.png",
    "category": "message"
  },
  "type": "REST",
  "lang": {
    "en-US": {
      "name": "Get Voucher Code",
      "description": "A Template for a custom Journey Builder activity"
    }
  },
  "arguments": {
    "execute": {
      "inArguments": [
        {
          "campaignName": "My Test Campaign"
        }
      ],
      "outArguments": [
        {
        "newCampaignNameAvailable": "No"
        }
      ],
      "timeout": 100000,
      "retryCount": 1,
      "retryDelay": 10000,
      "concurrentRequests": 5,
      "url": "https://journey-builder-activity-sunny.herokuapp.com/journeybuilder/execute"
    }
  },
  "configurationArguments": {
    "applicationExtensionKey": "__application_key_from_appcenter_here__",
    "save": {
      "url": "https://journey-builder-activity-sunny.herokuapp.com/journeybuilder/save",
      "verb": "POST"
    },
    "publish": {
      "url": "https://journey-builder-activity-sunny.herokuapp.com/journeybuilder/publish",
      "verb": "POST"
    },
    "stop": {
      "url": "https://journey-builder-activity-sunny.herokuapp.com/journeybuilder/stop",
      "verb": "POST"
    },
    "validate": {
      "url": "https://journey-builder-activity-sunny.herokuapp.com/journeybuilder/validate",
      "verb": "POST"
    }
  },
  "wizardSteps": [
    {
      "label": "Configure Activity",
      "key": "step1"
    }
  ],
  "userInterfaces": {
    "configModal": {
      "height": 400,
      "width": 1000,
      "fullscreen": false
    }
  },
  "schema": {
    "arguments": {
      "execute": {
        "inArguments": [
          {
            "campaignName": {
              "dataType": "text",
              "isNullable": true,
              "direction": "in"
            }
          }
        ],
        "outArguments": [
          {
            "newCampaignNameAvailable": {
              "dataType": "text",
              "isNullable": true,
              "direction": "in"
            }
          }
        ]
      }
    }
  }
}